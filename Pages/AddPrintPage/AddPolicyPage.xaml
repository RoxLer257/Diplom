<Page x:Class="Diplom.Pages.AddPolicyPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
      xmlns:local="clr-namespace:Diplom.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1280"
      Title="AddPolicyPage">

    <Border Padding="30" Background="#ffffff">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,30">
                <Icon:PackIconMaterial Kind="Car" Width="30" Height="30" Foreground="#003087" Margin="0,0,10,0"/>
                <TextBlock Text="Добавление полиса страхования автомобиля" 
                           FontSize="24" 
                           Foreground="#003087" 
                           VerticalAlignment="Center"/>
            </StackPanel>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" BorderBrush="#003087" BorderThickness="1" Margin="0,0,20,0" Padding="15">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                <Icon:PackIconMaterialDesign Kind="Person" Width="20" Height="20" Foreground="#003087" Margin="0,0,5,0"/>
                                <TextBlock Text="Клиент и полис" FontSize="16" Foreground="#003087"/>
                            </StackPanel>

                            <!-- Список клиентов -->
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <ListBox x:Name="ClientsListBox" 
                                         MinHeight="50" 
                                         MaxHeight="100" 
                                         Margin="25,0,0,0"
                                         DisplayMemberPath="DisplayName"
                                         SelectionMode="Single"/>

                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <Button x:Name="AddClientButton" Width="30" Height="30" Margin="5,0"
                                            Background="#003087" Foreground="White" Click="AddClientButton_Click"
                                            ToolTip="Добавить клиента в полис" Visibility="Visible">
                                        <Icon:PackIconMaterial Kind="Plus" Width="20" Height="20"/>
                                    </Button>
                                    <Button x:Name="RemoveClientButton" Width="30" Height="30" Margin="5,0"
                                            Background="DarkRed" Foreground="White" Click="RemoveClientButton_Click"
                                            ToolTip="Удалить выбранного клиента"
                                            Visibility="Collapsed">
                                        <Icon:PackIconMaterial Kind="Delete" Width="20" Height="20"/>
                                    </Button>
                                </StackPanel>
                            </Grid>

                            <Grid Margin="0,0,0,15">
                                <ComboBox x:Name="PolicyTypeComboBox" 
                                          DisplayMemberPath="TypeName" 
                                          SelectedValuePath="PolicyTypeID" 
                                          MinWidth="150"
                                          Margin="25,0,0,0"
                                          Tag="{Binding ElementName=PolicyTypePlaceholder}"
                                          SelectionChanged="ComboBox_SelectionChanged"
                                          ToolTip="Выберите тип автострахования">
                                </ComboBox>
                                <TextBlock x:Name="PolicyTypePlaceholder" 
                                           Text="Тип страхования" 
                                           FontSize="14" 
                                           Foreground="#6f7582" 
                                           IsHitTestVisible="False" 
                                           VerticalAlignment="Center" 
                                           Margin="30,0,0,0" 
                                           Visibility="Visible"/>
                                <Icon:PackIconMaterial Kind="FileDocument" Width="20" Height="20" Foreground="#003087" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            </Grid>

                            <!--<Grid Margin="0,0,0,15">
                                <TextBox x:Name="InsuranceAmountTextBox" 
                                         MinWidth="150" 
                                         VerticalAlignment="Center" 
                                         Margin="25,0,0,0"
                                         Tag="{Binding ElementName=InsuranceAmountPlaceholder}"
                                         GotFocus="TextBox_GotFocus" 
                                         LostFocus="TextBox_LostFocus" 
                                         TextChanged="TextBox_TextChanged"/>
                                <TextBlock x:Name="InsuranceAmountPlaceholder" 
                                           Text="Сумма страхования" 
                                           FontSize="14" 
                                           Foreground="#6f7582" 
                                           IsHitTestVisible="False" 
                                           VerticalAlignment="Center" 
                                           Margin="30,0,0,0" 
                                           Visibility="Visible"/>
                                <Icon:PackIconMaterial Kind="CurrencyRub" Width="20" Height="20" Foreground="#003087" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            </Grid>-->
                            
                            <Grid Margin="0,0,0,15">

                                <DatePicker x:Name="StartDatePicker" 
            MinWidth="150" 
            Margin="25,0,0,0"
            ToolTip="Выберите дату начала действия полиса(дд/мм/гггг)">
                                </DatePicker>
                                <Icon:PackIconMaterial Kind="CalendarStart" 
                           Width="20" 
                           Height="20" 
                           Foreground="#003087" 
                           VerticalAlignment="Center" 
                           Margin="0,0,5,0"/>
                            </Grid>

                            <Grid Margin="0,0,0,15">

                                <DatePicker x:Name="EndDatePicker" 
            MinWidth="150" 
            Margin="25,0,0,0"
            ToolTip="Выберите дату окончания действия полиса(дд/мм/гггг)">
                                </DatePicker>
                                <Icon:PackIconMaterial Kind="CalendarEnd" 
                           Width="20" 
                           Height="20" 
                           Foreground="#003087" 
                           VerticalAlignment="Center" 
                           Margin="0,0,5,0"/>
                            </Grid>

                            <Grid Margin="0,0,0,15">
                                <ComboBox x:Name="StatusComboBox" 
                                          DisplayMemberPath="StatusName" 
                                          SelectedValuePath="StatusID" 
                                          MinWidth="150" 
                                          Margin="25,0,0,0"
                                          Tag="{Binding ElementName=StatusPlaceholder}"
                                          SelectionChanged="ComboBox_SelectionChanged"
                                          ToolTip="Выберите статус полиса"/>
                                <TextBlock x:Name="StatusPlaceholder" 
                                           Text="Статус полиса" 
                                           FontSize="14" 
                                           Foreground="#6f7582" 
                                           IsHitTestVisible="False" 
                                           VerticalAlignment="Center" 
                                           Margin="30,0,0,0" 
                                           Visibility="Visible"/>
                                <Icon:PackIconMaterial Kind="CheckCircle" Width="20" Height="20" Foreground="#003087" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            </Grid>

                            <!-- Кнопка "Создать клиента" -->
                            <Button Content="Создать клиента" 
                                    Width="150" 
                                    Height="30" 
                                    Background="#003087" 
                                    Foreground="White" 
                                    Margin="25,0,0,15"
                                    Click="ShowNewClientPanelButton_Click">
                                <Button.ContentTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Icon:PackIconMaterial Kind="AccountPlus" Width="20" Height="20" Margin="0,0,5,0"/>
                                            <TextBlock Text="Создать клиента"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </Button.ContentTemplate>
                            </Button>
                            

                            <!-- Добавление нового клиента -->
                            <StackPanel x:Name="NewClientPanel" Visibility="Collapsed" Margin="0,0,0,15">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                    <Icon:PackIconMaterial Kind="AccountPlus" Width="20" Height="20" Foreground="#003087" Margin="0,0,5,0"/>
                                    <TextBlock Text="Добавление нового клиента" FontSize="16" Foreground="#003087"/>
                                </StackPanel>

                                <Grid Margin="0,0,0,15">
                                    <ComboBox x:Name="ClientTypeComboBox" 
                                              DisplayMemberPath="TypeName" 
                                              SelectedValuePath="ClientTypeID" 
                                              MinWidth="150" 
                                              Margin="25,0,0,0"
                                              Tag="{Binding ElementName=ClientTypePlaceholder}"
                                              SelectionChanged="ComboBox_SelectionChanged"/>
                                    <TextBlock x:Name="ClientTypePlaceholder" 
                                               Text="Тип клиента" 
                                               FontSize="14" 
                                               Foreground="#6f7582" 
                                               IsHitTestVisible="False" 
                                               VerticalAlignment="Center" 
                                               Margin="30,0,0,0" 
                                               Visibility="Visible"/>
                                    <Icon:PackIconMaterial Kind="AccountGroup" Width="20" Height="20" Foreground="#003087" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                </Grid>

                                <Grid Margin="0,0,0,15" Visibility="Collapsed" Name="GrdLastName">
                                    <TextBox x:Name="LastNameTextBox" 
                                             MinWidth="150" 
                                             VerticalAlignment="Center" 
                                             Margin="25,0,0,0"
                                             Tag="{Binding ElementName=LastNamePlaceholder}"
                                             GotFocus="TextBox_GotFocus" 
                                             LostFocus="TextBox_LostFocus" 
                                             TextChanged="TextBox_TextChanged"/>
                                    <TextBlock x:Name="LastNamePlaceholder" 
                                               Text="Фамилия" 
                                               FontSize="14" 
                                               Foreground="#6f7582" 
                                               IsHitTestVisible="False" 
                                               VerticalAlignment="Center" 
                                               Margin="30,0,0,0" 
                                               Visibility="Visible"/>
                                    <Icon:PackIconMaterial Kind="Account" Width="20" Height="20" Foreground="#003087" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                </Grid>

                                <Grid Margin="0,0,0,15" Visibility="Collapsed" Name="GrdFirstName">
                                    <TextBox x:Name="FirstNameTextBox" 
                                             MinWidth="150" 
                                             VerticalAlignment="Center" 
                                             Margin="25,0,0,0"
                                             Tag="{Binding ElementName=FirstNamePlaceholder}"
                                             GotFocus="TextBox_GotFocus" 
                                             LostFocus="TextBox_LostFocus" 
                                             TextChanged="TextBox_TextChanged"/>
                                    <TextBlock x:Name="FirstNamePlaceholder" 
                                               Text="Имя" 
                                               FontSize="14" 
                                               Foreground="#6f7582" 
                                               IsHitTestVisible="False" 
                                               VerticalAlignment="Center" 
                                               Margin="30,0,0,0" 
                                               Visibility="Visible"/>
                                    <Icon:PackIconMaterial Kind="Account" Width="20" Height="20" Foreground="#003087" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                </Grid>

                                <Grid Margin="0,0,0,15" Visibility="Collapsed" Name="GrdMiddleName">
                                    <TextBox x:Name="MiddleNameTextBox" 
                                             MinWidth="150" 
                                             VerticalAlignment="Center" 
                                             Margin="25,0,0,0"
                                             Tag="{Binding ElementName=MiddleNamePlaceholder}"
                                             GotFocus="TextBox_GotFocus" 
                                             LostFocus="TextBox_LostFocus" 
                                             TextChanged="TextBox_TextChanged"/>
                                    <TextBlock x:Name="MiddleNamePlaceholder" 
                                               Text="Отчество" 
                                               FontSize="14" 
                                               Foreground="#6f7582" 
                                               IsHitTestVisible="False" 
                                               VerticalAlignment="Center" 
                                               Margin="30,0,0,0" 
                                               Visibility="Visible"/>
                                    <Icon:PackIconMaterial Kind="Account" Width="20" Height="20" Foreground="#003087" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                </Grid>

                                <Grid Margin="0,0,0,15" Visibility="Collapsed" Name="GrdCompany">
                                    <TextBox x:Name="CompanyNameTextBox" 
                                             MinWidth="150" 
                                             VerticalAlignment="Center" 
                                             Margin="25,0,0,0"
                                             Tag="{Binding ElementName=CompanyNamePlaceholder}"
                                             GotFocus="TextBox_GotFocus" 
                                             LostFocus="TextBox_LostFocus" 
                                             TextChanged="TextBox_TextChanged"/>
                                    <TextBlock x:Name="CompanyNamePlaceholder" 
                                               Text="Название компании" 
                                               FontSize="14" 
                                               Foreground="#6f7582" 
                                               IsHitTestVisible="False" 
                                               VerticalAlignment="Center" 
                                               Margin="30,0,0,0" 
                                               Visibility="Visible"/>
                                    <Icon:PackIconMaterial Kind="OfficeBuilding" Width="20" Height="20" Foreground="#003087" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                </Grid>

                                <Grid Margin="0,0,0,15">
                                    <TextBox x:Name="PassportNumberTextBox" 
                                             MinWidth="150" 
                                             VerticalAlignment="Center" 
                                             Margin="25,0,0,0"
                                             Tag="{Binding ElementName=PassportNumberPlaceholder}"
                                             GotFocus="TextBox_GotFocus" 
                                             LostFocus="TextBox_LostFocus" 
                                             TextChanged="TextBox_TextChanged"/>
                                    <TextBlock x:Name="PassportNumberPlaceholder" 
                                               Text="Номер паспорта" 
                                               FontSize="14" 
                                               Foreground="#6f7582" 
                                               IsHitTestVisible="False" 
                                               VerticalAlignment="Center" 
                                               Margin="30,0,0,0" 
                                               Visibility="Visible"/>
                                    <Icon:PackIconMaterial Kind="Passport" Width="20" Height="20" Foreground="#003087" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                </Grid>

                                <Grid Margin="0,0,0,15">
                                    <TextBox x:Name="INNTextBox" 
                                             MinWidth="150" 
                                             VerticalAlignment="Center" 
                                             Margin="25,0,0,0"
                                             Tag="{Binding ElementName=INNPlaceholder}"
                                             GotFocus="TextBox_GotFocus" 
                                             LostFocus="TextBox_LostFocus" 
                                             TextChanged="TextBox_TextChanged"/>
                                    <TextBlock x:Name="INNPlaceholder" 
                                               Text="ИНН" 
                                               FontSize="14" 
                                               Foreground="#6f7582" 
                                               IsHitTestVisible="False" 
                                               VerticalAlignment="Center" 
                                               Margin="30,0,0,0" 
                                               Visibility="Visible"/>
                                    <Icon:PackIconMaterial Kind="FileDocument" Width="20" Height="20" Foreground="#003087" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                </Grid>

                                <Grid Margin="0,0,0,15">
                                    <TextBox x:Name="PhoneTextBox" 
                                             MinWidth="150" 
                                             VerticalAlignment="Center" 
                                             Margin="25,0,0,0"
                                             Tag="{Binding ElementName=PhonePlaceholder}"
                                             GotFocus="TextBox_GotFocus" 
                                             LostFocus="TextBox_LostFocus" 
                                             TextChanged="TextBox_TextChanged"/>
                                    <TextBlock x:Name="PhonePlaceholder" 
                                               Text="Телефон" 
                                               FontSize="14" 
                                               Foreground="#6f7582" 
                                               IsHitTestVisible="False" 
                                               VerticalAlignment="Center" 
                                               Margin="30,0,0,0" 
                                               Visibility="Visible"/>
                                    <Icon:PackIconMaterial Kind="Phone" Width="20" Height="20" Foreground="#003087" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                </Grid>

                                <Grid Margin="0,0,0,15">
                                    <TextBox x:Name="EmailTextBox" 
                                             MinWidth="150" 
                                             VerticalAlignment="Center" 
                                             Margin="25,0,0,0"
                                             Tag="{Binding ElementName=EmailPlaceholder}"
                                             GotFocus="TextBox_GotFocus" 
                                             LostFocus="TextBox_LostFocus" 
                                             TextChanged="TextBox_TextChanged"/>
                                    <TextBlock x:Name="EmailPlaceholder" 
                                               Text="Email" 
                                               FontSize="14" 
                                               Foreground="#6f7582" 
                                               IsHitTestVisible="False" 
                                               VerticalAlignment="Center" 
                                               Margin="30,0,0,0" 
                                               Visibility="Visible"/>
                                    <Icon:PackIconMaterial Kind="Email" Width="20" Height="20" Foreground="#003087" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                </Grid>

                                <Button Content="Добавить клиента" 
                                        Width="150" 
                                        Height="30" 
                                        Background="#003087" 
                                        Foreground="White" 
                                        Margin="25,0,0,0"
                                        Click="CreateClientButton_Click">
                                    <Button.ContentTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Icon:PackIconMaterial Kind="AccountPlus" Width="20" Height="20" Margin="0,0,5,0"/>
                                                <TextBlock Text="Добавить клиента"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </Button.ContentTemplate>
                                </Button>
                                <Button Content="Скрыть" 
                                        Width="150" 
                                        Height="30" 
                                        Background="#E0E0E0" 
                                        Foreground="Black" 
                                        Margin="25,10,0,0"
                                        Click="HideNewClientPanelButton_Click">
                                    <Button.ContentTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Icon:PackIconMaterial Kind="Close" Width="20" Height="20" Margin="0,0,5,0"/>
                                                <TextBlock Text="Скрыть"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </Button.ContentTemplate>
                                </Button>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </Border>

                <Border Grid.Column="1" BorderBrush="#003087" BorderThickness="1" Margin="0,0,20,0" Padding="15">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <Icon:PackIconMaterial Kind="CarSide" Width="20" Height="20" Foreground="#003087" Margin="0,0,5,0"/>
                            <TextBlock Text="Данные автомобиля" FontSize="16" Foreground="#003087"/>
                        </StackPanel>

                        <Grid Margin="0,0,0,15">
                            <ComboBox x:Name="VehicleMakeComboBox" 
                                      DisplayMemberPath="MakeName" 
                                      SelectedValuePath="MakeID" 
                                      MinWidth="150" 
                                      Margin="25,0,0,0"
                                      Tag="{Binding ElementName=VehicleMakePlaceholder}"
                                      SelectionChanged="VehicleMakeComboBox_SelectionChanged"
                                      ToolTip="Выберите марку автомобиля"/>
                            <TextBlock x:Name="VehicleMakePlaceholder" 
                                       Text="Марка автомобиля" 
                                       FontSize="14" 
                                       Foreground="#6f7582" 
                                       IsHitTestVisible="False" 
                                       VerticalAlignment="Center" 
                                       Margin="30,0,0,0" 
                                       Visibility="Visible"/>
                            <Icon:PackIconMaterial Kind="CarCog" Width="20" Height="20" Foreground="#003087" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        </Grid>

                        <Grid Margin="0,0,0,15">
                            <ComboBox x:Name="VehicleModelComboBox" 
                                      DisplayMemberPath="ModelName" 
                                      SelectedValuePath="ModelID" 
                                      MinWidth="150" 
                                      Margin="25,0,0,0"
                                      Tag="{Binding ElementName=VehicleModelPlaceholder}"
                                      SelectionChanged="ComboBox_SelectionChanged"
                                      ToolTip="Выберите модель автомобиля"/>
                            <TextBlock x:Name="VehicleModelPlaceholder" 
                                       Text="Модель автомобиля" 
                                       FontSize="14" 
                                       Foreground="#6f7582" 
                                       IsHitTestVisible="False" 
                                       VerticalAlignment="Center" 
                                       Margin="30,0,0,0" 
                                       Visibility="Visible"/>
                            <Icon:PackIconMaterial Kind="CarMultiple" Width="20" Height="20" Foreground="#003087" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        </Grid>

                        <Grid Margin="0,0,0,15">
                            <TextBox x:Name="VinTextBox" 
                                     MinWidth="150"
                                     VerticalAlignment="Center" 
                                     MaxLength="17" 
                                     Margin="25,0,0,0"
                                     Tag="{Binding ElementName=VinPlaceholder}"
                                     GotFocus="TextBox_GotFocus" 
                                     LostFocus="TextBox_LostFocus" 
                                     TextChanged="TextBox_TextChanged"/>
                            <TextBlock x:Name="VinPlaceholder" 
                                       Text="VIN" 
                                       FontSize="14" 
                                       Foreground="#6f7582" 
                                       IsHitTestVisible="False" 
                                       VerticalAlignment="Center" 
                                       Margin="30,0,0,0" 
                                       Visibility="Visible"/>
                            <Icon:PackIconMaterial Kind="Barcode" Width="20" Height="20" Foreground="#003087" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        </Grid>

                        <Grid Margin="0,0,0,15">
                            <TextBox x:Name="YearTextBox" 
                                     MinWidth="100" 
                                     VerticalAlignment="Center" 
                                     Margin="25,0,0,0"
                                     Tag="{Binding ElementName=YearPlaceholder}"
                                     GotFocus="TextBox_GotFocus" 
                                     LostFocus="TextBox_LostFocus" 
                                     TextChanged="TextBox_TextChanged"/>
                            <TextBlock x:Name="YearPlaceholder" 
                                       Text="Год выпуска" 
                                       FontSize="14" 
                                       Foreground="#6f7582" 
                                       IsHitTestVisible="False" 
                                       VerticalAlignment="Center" 
                                       Margin="30,0,0,0" 
                                       Visibility="Visible"/>
                            <Icon:PackIconMaterial Kind="CalendarClock" Width="20" Height="20" Foreground="#003087" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        </Grid>

                        <Grid Margin="0,0,0,15">
                            <TextBox x:Name="LicensePlateTextBox" 
                                     MinWidth="150" 
                                     VerticalAlignment="Center" 
                                     MaxLength="20" 
                                     Margin="25,0,0,0"
                                     Tag="{Binding ElementName=LicensePlatePlaceholder}"
                                     GotFocus="TextBox_GotFocus" 
                                     LostFocus="TextBox_LostFocus" 
                                     TextChanged="TextBox_TextChanged"/>
                            <TextBlock x:Name="LicensePlatePlaceholder" 
                                       Text="Номерной знак" 
                                       FontSize="14" 
                                       Foreground="#6f7582" 
                                       IsHitTestVisible="False" 
                                       VerticalAlignment="Center" 
                                       Margin="30,0,0,0" 
                                       Visibility="Visible"/>
                            <Icon:PackIconMaterial Kind="CardAccountDetails" Width="20" Height="20" Foreground="#003087" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        </Grid>
                        <!-- Новый регион -->
                        <!-- Регион -->
                        <Grid Margin="0,0,0,15">
                            <ComboBox x:Name="RegionComboBox" 
              MinWidth="150" 
              Margin="25,0,0,0"
              Tag="{Binding ElementName=RegionPlaceholder}"
              ToolTip="Выберите регион регистрации"
              SelectionChanged="RegionComboBox_SelectionChanged">
                                <ComboBoxItem Content="Москва" Tag="1.99"/>
                                <ComboBoxItem Content="Санкт-Петербург" Tag="1.79"/>
                                <ComboBoxItem Content="Новосибирск" Tag="1.67"/>
                                <ComboBoxItem Content="Челябинск" Tag="1.67"/>
                                <ComboBoxItem Content="Краснодарский край" Tag="1.79"/>
                                <ComboBoxItem Content="Московская область" Tag="1.65"/>
                                <ComboBoxItem Content="Ленинградская область" Tag="1.36"/>
                                <ComboBoxItem Content="Чукотский АО" Tag="0.67"/>
                            </ComboBox>
                            <TextBlock x:Name="RegionPlaceholder" 
               Text="Регион регистрации" 
               FontSize="14" 
               Foreground="#6f7582" 
               IsHitTestVisible="False" 
               VerticalAlignment="Center" 
               Margin="30,0,0,0" 
               Visibility="Visible"/>
                            <Icon:PackIconMaterial Kind="MapMarker" Width="20" Height="20" Foreground="#003087" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        </Grid>

                        <!-- Мощность двигателя -->
                        <Grid Margin="0,0,0,15">
                            <TextBox x:Name="EnginePowerTextBox" 
             MinWidth="150" 
             VerticalAlignment="Center" 
             Margin="25,0,0,0"
             Tag="{Binding ElementName=EnginePowerPlaceholder}"
             GotFocus="TextBox_GotFocus" 
             LostFocus="TextBox_LostFocus"/>
                            <TextBlock x:Name="EnginePowerPlaceholder" 
               Text="Мощность (л.с.)" 
               FontSize="14" 
               Foreground="#6f7582" 
               IsHitTestVisible="False" 
               VerticalAlignment="Center" 
               Margin="30,0,0,0" 
               Visibility="Visible"/>
                            <Icon:PackIconMaterial Kind="Engine" Width="20" Height="20" Foreground="#003087" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <Border Grid.Column="2" BorderBrush="#003087" BorderThickness="1" Padding="15">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                <Icon:PackIconMaterial Kind="AccountMultiple" Width="20" Height="20" Foreground="#003087" Margin="0,0,5,0"/>
                                <TextBlock Text="Водители" FontSize="16" Foreground="#003087"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,10,0,10">
                                <Button Background="#003087" Foreground="White"
                                        Click="ShowDriverListPanel_Click" Name="ShowDriverListPanel"
                                        Margin="0,0,10,0" Width="150" Height="30">
                                    <StackPanel Orientation="Horizontal">
                                        <Icon:PackIconMaterial Kind="AccountMultiple" Width="18" Height="18" Margin="0,0,5,0"/>
                                        <TextBlock Text="Добавить из списка"/>
                                    </StackPanel>
                                </Button>
                                <Button Background="#003087" Click="ShowNewDriverPanel_Click" Foreground="White"
                                        Margin="0 0 10 0" Width="150" Height="30" Name="ShowNewDriverPanel">
                                    <StackPanel Orientation="Horizontal">
                                        <Icon:PackIconMaterial Kind="AccountPlus" Width="18" Height="18" Margin="0,0,5,0"/>
                                        <TextBlock Text="Добавить нового"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                            <StackPanel Margin="0,0,0,15">
                                <TextBlock Text="Выбранные водители:" Margin="0,0,0,5"/>
                                <ListBox x:Name="SelectedDriversListBox" 
                                         MinHeight="50" MaxHeight="100"
                                         DisplayMemberPath="FullName" 
                                         SelectionMode="Multiple" 
                                         ToolTip="Список добавленных водителей"/>
                                <Button x:Name="RemoveDriverButton" Width="30" Height="30" Margin="5,0"
                                            Background="DarkRed" Foreground="White" Click="RemoveDriverButton_Click"
                                            ToolTip="Удалить выбранного водителя"
                                            Visibility="Collapsed">
                                    <Icon:PackIconMaterial Kind="Delete" Width="20" Height="20"/>
                                </Button>
                            </StackPanel>

                            <StackPanel x:Name="NewDriverPanel" Visibility="Collapsed" Margin="0,0,0,15">
                                <TextBlock Text="Новый водитель:" Margin="0,0,0,5"/>
                                <Grid Margin="0,0,0,10">
                                    <TextBox x:Name="DriverLastNameTextBox" 
                                             MinWidth="150" 
                                             VerticalAlignment="Center" 
                                             Margin="25,0,0,0"
                                             Tag="{Binding ElementName=DriverLastNamePlaceholder}"
                                             GotFocus="TextBox_GotFocus" 
                                             LostFocus="TextBox_LostFocus" 
                                             TextChanged="TextBox_TextChanged"/>
                                    <TextBlock x:Name="DriverLastNamePlaceholder" 
                                               Text="Фамилия" 
                                               FontSize="14" 
                                               Foreground="#6f7582" 
                                               IsHitTestVisible="False" 
                                               VerticalAlignment="Center" 
                                               Margin="30,0,0,0" 
                                               Visibility="Visible"/>
                                    <Icon:PackIconMaterial Kind="AccountDetails" Width="20" Height="20" Foreground="#003087" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                </Grid>
                                <Grid Margin="0,0,0,10">
                                    <TextBox x:Name="DriverFirstNameTextBox" 
                                             MinWidth="150" 
                                             VerticalAlignment="Center" 
                                             Margin="25,0,0,0"
                                             Tag="{Binding ElementName=DriverFirstNamePlaceholder}"
                                             GotFocus="TextBox_GotFocus" 
                                             LostFocus="TextBox_LostFocus" 
                                             TextChanged="TextBox_TextChanged"/>
                                    <TextBlock x:Name="DriverFirstNamePlaceholder" 
                                               Text="Имя" 
                                               FontSize="14" 
                                               Foreground="#6f7582" 
                                               IsHitTestVisible="False" 
                                               VerticalAlignment="Center" 
                                               Margin="30,0,0,0" 
                                               Visibility="Visible"/>
                                    <Icon:PackIconMaterial Kind="AccountDetails" Width="20" Height="20" Foreground="#003087" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                </Grid>
                                <Grid Margin="0,0,0,10">
                                    <TextBox x:Name="DriverMiddleNameTextBox" 
                                             MinWidth="150" 
                                             VerticalAlignment="Center" 
                                             Margin="25,0,0,0"
                                             Tag="{Binding ElementName=DriverMiddleNamePlaceholder}"
                                             GotFocus="TextBox_GotFocus" 
                                             LostFocus="TextBox_LostFocus" 
                                             TextChanged="TextBox_TextChanged"/>
                                    <TextBlock x:Name="DriverMiddleNamePlaceholder" 
                                               Text="Отчество" 
                                               FontSize="14" 
                                               Foreground="#6f7582" 
                                               IsHitTestVisible="False" 
                                               VerticalAlignment="Center" 
                                               Margin="30,0,0,0" 
                                               Visibility="Visible"/>
                                    <Icon:PackIconMaterial Kind="AccountDetails" Width="20" Height="20" Foreground="#003087" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                </Grid>
                                <Grid Margin="0,0,0,15">
                                    <TextBox x:Name="DriverPassportNumberTextBox" 
                                             MinWidth="150" 
                                             VerticalAlignment="Center" 
                                             Margin="25,0,0,0"
                                             Tag="{Binding ElementName=DriverPassportNumberPlaceholder}"
                                             GotFocus="TextBox_GotFocus" 
                                             LostFocus="TextBox_LostFocus" 
                                             TextChanged="TextBox_TextChanged"/>
                                    <TextBlock x:Name="DriverPassportNumberPlaceholder" 
                                               Text="Номер паспорта" 
                                               FontSize="14" 
                                               Foreground="#6f7582" 
                                               IsHitTestVisible="False" 
                                               VerticalAlignment="Center" 
                                               Margin="30,0,0,0" 
                                               Visibility="Visible"/>
                                    <Icon:PackIconMaterial Kind="Passport" Width="20" Height="20" Foreground="#003087" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                </Grid>

                                <Grid Margin="0,0,0,15">
                                    <TextBox x:Name="DriverINNTextBox" 
                                             MinWidth="150" 
                                             VerticalAlignment="Center" 
                                             Margin="25,0,0,0"
                                             Tag="{Binding ElementName=DriverINNPlaceholder}"
                                             GotFocus="TextBox_GotFocus" 
                                             LostFocus="TextBox_LostFocus" 
                                             TextChanged="TextBox_TextChanged"/>
                                    <TextBlock x:Name="DriverINNPlaceholder" 
                                               Text="ИНН" 
                                               FontSize="14" 
                                               Foreground="#6f7582" 
                                               IsHitTestVisible="False" 
                                               VerticalAlignment="Center" 
                                               Margin="30,0,0,0" 
                                               Visibility="Visible"/>
                                    <Icon:PackIconMaterial Kind="FileDocument" Width="20" Height="20" Foreground="#003087" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                </Grid>
                                <Grid Margin="0,0,0,10">
                                    <DatePicker x:Name="DriverDateOfBirthPicker" 
                                                MinWidth="150" 
                                                Margin="25,0,0,0"
                                                ToolTip="Выберите день рождения"/>
                                    <Icon:PackIconMaterial Kind="Cake" Width="20" Height="20" Foreground="#003087" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                </Grid>
                                <Grid Margin="0,0,0,10">
                                    <TextBox x:Name="DriverLicenseNumberTextBox" 
                                             MinWidth="150"
                                             VerticalAlignment="Center" 
                                             MaxLength="20" 
                                             Margin="25,0,0,0"
                                             Tag="{Binding ElementName=DriverLicenseNumberPlaceholder}"
                                             GotFocus="TextBox_GotFocus" 
                                             LostFocus="TextBox_LostFocus" 
                                             TextChanged="TextBox_TextChanged"/>
                                    <TextBlock x:Name="DriverLicenseNumberPlaceholder" 
                                               Text="№ удостоверения" 
                                               FontSize="14" 
                                               Foreground="#6f7582" 
                                               IsHitTestVisible="False" 
                                               VerticalAlignment="Center" 
                                               Margin="30,0,0,0" 
                                               Visibility="Visible"/>
                                    <Icon:PackIconMaterial Kind="CardAccountDetailsOutline" Width="20" Height="20" Foreground="#003087" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                </Grid>
                                <Grid Margin="0,0,0,10">
                                    <TextBox x:Name="DriverExperienceTextBox" 
                                             MinWidth="100" 
                                             VerticalAlignment="Center" 
                                             Margin="25,0,0,0"
                                             Tag="{Binding ElementName=DriverExperiencePlaceholder}"
                                             GotFocus="TextBox_GotFocus" 
                                             LostFocus="TextBox_LostFocus" 
                                             TextChanged="TextBox_TextChanged"/>
                                    <TextBlock x:Name="DriverExperiencePlaceholder" 
                                               Text="Стаж (лет)" 
                                               FontSize="14" 
                                               Foreground="#6f7582" 
                                               IsHitTestVisible="False" 
                                               VerticalAlignment="Center" 
                                               Margin="30,0,0,0" 
                                               Visibility="Visible"/>
                                    <Icon:PackIconMaterial Kind="Steering" Width="20" Height="20" Foreground="#003087" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                </Grid>
                                <Grid Margin="0,0,0,10">
                                    <TextBox x:Name="DriverPhoneTextBox" 
                                             MinWidth="150" 
                                             VerticalAlignment="Center" 
                                             Margin="25,0,0,0"
                                             Tag="{Binding ElementName=DriverPhonePlaceholder}"
                                             GotFocus="TextBox_GotFocus" 
                                             LostFocus="TextBox_LostFocus" 
                                             TextChanged="TextBox_TextChanged"/>
                                    <TextBlock x:Name="DriverPhonePlaceholder" 
                                               Text="Телефон" 
                                               FontSize="14" 
                                               Foreground="#6f7582" 
                                               IsHitTestVisible="False" 
                                               VerticalAlignment="Center" 
                                               Margin="30,0,0,0" 
                                               Visibility="Visible"/>
                                    <Icon:PackIconMaterial Kind="Phone" Width="20" Height="20" Foreground="#003087" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                </Grid>
                                <Grid Margin="0,0,0,10">
                                    <TextBox x:Name="DriverEmailTextBox" 
                                             MinWidth="150" 
                                             VerticalAlignment="Center" 
                                             Margin="25,0,0,0"
                                             Tag="{Binding ElementName=DriverEmailPlaceholder}"
                                             GotFocus="TextBox_GotFocus" 
                                             LostFocus="TextBox_LostFocus" 
                                             TextChanged="TextBox_TextChanged"/>
                                    <TextBlock x:Name="DriverEmailPlaceholder" 
                                               Text="Email" 
                                               FontSize="14" 
                                               Foreground="#6f7582" 
                                               IsHitTestVisible="False" 
                                               VerticalAlignment="Center" 
                                               Margin="30,0,0,0" 
                                               Visibility="Visible"/>
                                    <Icon:PackIconMaterial Kind="Email" Width="20" Height="20" Foreground="#003087" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                </Grid>
                                <StackPanel Orientation="Horizontal" Margin="25,0,0,10">
                                    <Icon:PackIconMaterial Kind="Alert" Width="18" Height="18" Foreground="DarkOrange" Margin="0,0,5,0"/>
                                    <CheckBox x:Name="DriverHadAccidentCheckBox"
                                              Content="Были страховые случаи (ДТП)?"
                                              VerticalAlignment="Center" FontSize="14"
                                              ToolTip="Установите, если водитель имел аварии, влияющие на КБМ"/>
                                </StackPanel>
                                <Button Content="Добавить" 
                                        Width="100" 
                                        Height="30" 
                                        Click="AddNewDriverButton_Click"/>
                                <Button Content="Скрыть" 
                                        Width="150" Name="HideNewDriverPanelButton"
                                        Height="30" 
                                        Background="#E0E0E0" 
                                        Foreground="Black" 
                                        Margin="25,10,0,0"
                                        Click="HideNewDriverPanelButton_Click">
                                    <Button.ContentTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Icon:PackIconMaterial Kind="Close" Width="20" Height="20" Margin="0,0,5,0"/>
                                                <TextBlock Text="Скрыть"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </Button.ContentTemplate>
                                </Button>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </Grid>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,30,0,0">
                <Button Content="Сохранить" 
                        Width="100" Visibility="Hidden"
                        Height="40" Name="SaveButton"
                        Background="#003087" 
                        Foreground="White" 
                        Margin="0,0,10,0" 
                        Click="SaveButton_Click">
                    <Button.ContentTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Icon:PackIconMaterial Kind="ContentSave" Width="20" Height="20" Margin="0,0,5,0"/>
                                <TextBlock Text="Сохранить"/>
                            </StackPanel>
                        </DataTemplate>
                    </Button.ContentTemplate>
                </Button>
                <TextBlock x:Name="CalculatedCostTextBlock" 
               Text="0.00 руб." 
               FontSize="16" 
               Foreground="#003087" 
               VerticalAlignment="Center" 
               Margin="10,0,10,0" 
               Visibility="Hidden"/>
                <Button Content="Рассчитать стоимость" 
            Width="150" 
            Height="30" 
            Background="#003087" 
            Foreground="White" 
            Margin="0,0,10,0" 
            Click="CalculateCostButton_Click">
                    <Button.ContentTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Icon:PackIconMaterial Kind="Calculator" Width="20" Height="20" Margin="0,0,5,0"/>
                                <TextBlock Text="Рассчитать стоимость"/>
                            </StackPanel>
                        </DataTemplate>
                    </Button.ContentTemplate>
                </Button>
                <Button Content="Отмена" 
                        Width="100" 
                        Height="40" 
                        Background="#E0E0E0" 
                        Foreground="Black" 
                        Click="CancelButton_Click">
                    <Button.ContentTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Icon:PackIconMaterial Kind="Close" Width="20" Height="20" Margin="0,0,5,0"/>
                                <TextBlock Text="Отмена"/>
                            </StackPanel>
                        </DataTemplate>
                    </Button.ContentTemplate>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Page>
