<Window x:Class="Diplom.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Diplom"
        mc:Ignorable="d"
        Title="ВСК - управление" Height="800" Width="1280"
        WindowStartupLocation="CenterScreen"
        Icon="Images/VSKLogo.png">
    <Border Background="#FFFFFF" MouseDown="Border_MouseDown" MouseLeftButtonDown="Border_MouseLeftButtonDown">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="7*"/>
            </Grid.RowDefinitions>
            <Frame Grid.Row="1" NavigationUIVisibility="Hidden"
               Name="FrmMain">
            </Frame>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Top"
                    HorizontalAlignment="Center">
                <Image Width="500"
                   Height="100"
                   Source="/Images/VSKLogo.png"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
